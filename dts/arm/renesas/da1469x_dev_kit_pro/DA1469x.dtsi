#include <dt-bindings/gpio/gpio.h>
#include <mem.h>
#include <arm/armv8-m.dtsi>

/ {

	cpus: cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			compatible = "arm,cortex-m33f";
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <1>;
		};

		mpu: mpu@e000ed90 {
			compatible = "arm,armv8m-mpu";
			reg = <0xe000ed90 0x40>;
			arm,num-mpu-regions = <8>;
		};
	};

	sram0: memory@20000000 {
		compatible = "mmio-sram";
		reg = <(0x20000000 + 0x200) (DT_SIZE_K(512) - 0x200)>; //TODO: leave space AREA_OVERHEAD
	};

	
	soc {
		flash0: flash@0 {
			compatible = "soc-nv-flash";
			reg = <0 DT_SIZE_K(384)>; 
		};

		gpio1: gpio@50020a98 {
			compatible = "renesas,DA1469x-gpio";
			reg = <0x50020A98 11>;
			gpio-controller;
			label = "GPIO1";
			#gpio-cells = <2>; 
			port = <1>;
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};