/ {

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-m33";
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <1>;
		};
	};

	sram0: memory@2000000 {
		compatible = "mmio-sram";
		reg = <0x2000000 DT_SIZE_K(512)>; //TODO: leave space AREA_OVERHEAD
	};

	
	soc {
		flash0: flash@0 {
			compatible = "soc-nv-flash";
			reg = <0 DT_SIZE_K(128)>; //TODO: update 128 to the actual flash size
		};

		gpio1: gpio@40006000 {
			compatible = "renesas,DA1469x-gpio";
			reg = <0x40006000 0x1000>;
			gpio-controller;
			label = "GPIO1";
			#gpio-cells = <2>; 
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};